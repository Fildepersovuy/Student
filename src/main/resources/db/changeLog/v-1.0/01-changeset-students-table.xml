<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2" author="aleksey">
        <createTable tableName="students">
            <column autoIncrement="true" name="id" type="integer">
                <constraints primaryKey="true"/>
            </column>
            <column name="fio" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country_of_birth" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_birth" type="timestamp"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
<!--        <rollback>-->
<!--            <dropTable tableName="students" cascadeConstraints="true"</dropTable>-->
<!--        </rollback>-->
    </changeSet>

</databaseChangeLog>